# This line ensures that the code block is only executed when the script is run directly, not when imported as a module
if __name__ == "__main__":

# Prompt the user to enter the first number and convert it to a float
    num1 = float(input("Enter the first number: "))

# Prompt the user to enter the second number and convert it to a float
    num2 = float(input("Enter the second number: "))

# Prompt the user to enter the third number and convert it to a float
    num3 = float(input("Enter the third number: "))

# Prompt the user to enter the fourth number and convert it to a float
    num4 = float(input("Enter the fourth number: "))

 # Calculate the average of the four numbers
    average = (num1 + num2 + num3 + num4) / 4

# Print out the average of the four numbers, formatted to two decimal places
    print(f"The average of {num1}, {num2}, {num3}, and {num4} is: {average:.2f}")
